{
    "name": "webgriffe/esb",
    "description": "Simple, beanstalkd powered, ESB framework.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Webgriffe SRL",
            "email": "support@webgriffe.com"
        }
    ],
    "require": {
        "php": "~7.4.0|~8.0.0",
        "ext-pcntl": "*",
        "symfony/dependency-injection": "^3.3",
        "symfony/config": "^3.3",
        "symfony/yaml": "^3.3",
        "amphp/beanstalk": "^0.2.4",
        "monolog/monolog": "^1.23",
        "dragonmantank/cron-expression": "^2.0",
        "twig/twig": "^2.5",
        "nikic/fast-route": "^1.3",
        "amphp/http-server": "^0.8.2",
        "amphp/amp": "^2.5",
        "psr/log": "^1.1",
        "amphp/socket": "^0.10",
        "amphp/http": "^1.1",
        "amphp/file": "^0.3",
        "webmozart/assert": "^1.5",
        "symfony/serializer": "^4.3",
        "symfony/property-access": "^4.3",
        "symfony/property-info": "^4.3",
        "doctrine/annotations": "^1.8",
        "ramsey/uuid": "^3.8",
        "webgriffe/amp-elasticsearch": "^1.2",
        "pagerfanta/pagerfanta": "^2.4",
        "symfony/deprecation-contracts": "^2.1",
        "amphp/http-server-form-parser": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Webgriffe\\Esb\\": ["src/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Webgriffe\\Esb\\": ["tests/"]
        }
    },
    "bin": [
        "bin/esb"
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "amphp/phpunit-util": "^1.0",
        "pda/pheanstalk": "^3.1",
        "mikey179/vfsstream": "^1.6",
        "amphp/artax": "^3.0",
        "phpstan/phpstan": "^0.12",
        "symplify/easy-coding-standard": "^11.1"
    },
    "scripts": {
        "ecs": "vendor/bin/ecs",
        "phpstan": "vendor/bin/phpstan analyse --no-progress -l max -c phpstan.neon src/",
        "phpunit": "vendor/bin/phpunit",
        "tests": ["@ecs", "@phpstan", "@phpunit"]
    }
}
